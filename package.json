{
  "name": "demo",
  "version": "1.0.0",
  "scripts": {
    "start": "react-native start",
    "pod-install": "cd ios && pod install && chmod -R 777 Pods && cd ..",
    "reset-project": "node ./scripts/reset-project.js",
    "android": "react-native run-android",
    "ios": "react-native run-ios",
    "test": "jest",
    "test:coverage": "jest --coverage",
    "lint": "eslint .",
    "e2e:build:ios": "detox build --configuration ios.sim.debug",
    "e2e:build:android": "detox build --configuration android.emu.debug",
    "e2e:test:ios": "detox test --configuration ios.sim.debug",
    "e2e:test:android": "detox test --configuration android.emu.debug"
  },
  "jest": {
    "preset": "react-native",
    "collectCoverageFrom": [
      "src/**/*.{js,jsx,ts,tsx}",
      "!src/**/*.d.ts",
      "!src/**/index.{js,jsx,ts,tsx}",
      "!src/**/*.stories.{js,jsx,ts,tsx}",
      "!src/theme/**",
      "!src/assets/**"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 60,
        "functions": 60,
        "lines": 60,
        "statements": 60
      }
    },
    "transformIgnorePatterns": [
      "node_modules/(?!(react-native|@react-native|react-native-vector-icons|@react-navigation)/)"
    ],
    "moduleNameMapper": {
      "\\.png$": "<rootDir>/__mocks__/fileMock.js"
    },
    "setupFiles": [
      "<rootDir>/jest.setup.js"
    ],
    "testPathIgnorePatterns": [
      "<rootDir>/node_modules/",
      "<rootDir>/e2e/"
    ]
  },
  "dependencies": {
    "@react-native-async-storage/async-storage": "^1.19.3",
    "@react-navigation/bottom-tabs": "^6.3.2",
    "@react-navigation/native": "^6.0.2",
    "@react-navigation/native-stack": "^6.0.2",
    "@react-navigation/stack": "~6.2.1",
    "@reduxjs/toolkit": "^1.9.5",
    "@shopify/flash-list": "^1.6.4",
    "axios": "^0.27.2",
    "babel-plugin-module-resolver": "^5.0.0",
    "deepmerge": "^4.2.2",
    "formik": "^2.4.6",
    "graphql": "^16.5.0",
    "graphql-request": "^4.3.0",
    "lodash": "^4.17.21",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "react-native": "0.74.5",
    "react-native-fast-image": "^8.6.3",
    "react-native-gesture-handler": "~2.16.1",
    "react-native-keychain": "^10.0.0",
    "react-native-paper": "^5.12.3",
    "react-native-reanimated": "~3.10.1",
    "react-native-safe-area-context": "4.10.1",
    "react-native-screens": "3.31.1",
    "react-native-vector-icons": "^10.0.0",
    "react-redux": "^8.1.2",
    "redux-persist": "^6.0.0",
    "yup": "^1.6.1"
  },
  "devDependencies": {
    "@babel/core": "^7.20.0",
    "@babel/preset-env": "^7.20.0",
    "@babel/runtime": "^7.20.0",
    "@react-native/metro-config": "^0.74.2",
    "@testing-library/react-native": "^13.3.3",
    "@tsconfig/react-native": "^3.0.0",
    "@types/jest": "^29.5.12",
    "@types/lodash": "^4.17.6",
    "@types/react": "~18.2.45",
    "@types/react-native-vector-icons": "^6.4.18",
    "@types/react-test-renderer": "^18.0.7",
    "detox": "^20.36.3",
    "jest": "^29.7.0",
    "jest-circus": "^29.7.0",
    "metro-react-native-babel-preset": "0.76.7",
    "react-native-dotenv": "^3.4.11",
    "react-test-renderer": "18.2.0",
    "typescript": "~5.3.3"
  },
  "private": true
}
